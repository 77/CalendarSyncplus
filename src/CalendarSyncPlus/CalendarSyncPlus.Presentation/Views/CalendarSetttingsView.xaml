<UserControl x:Class="CalendarSyncPlus.Presentation.Views.CalendarSetttingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:converters="http://waf.codeplex.com/schemas"
             xmlns:converters2="http://metro.mahapps.com/winfx/xaml/shared"
             xmlns:converters1="clr-namespace:CalendarSyncPlus.Presentation.Converters"
             xmlns:views="clr-namespace:CalendarSyncPlus.Presentation.Views"
             xmlns:viewModels="clr-namespace:CalendarSyncPlus.Application.ViewModels;assembly=CalendarSyncPlus.Application"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="500"
             d:DataContext="{d:DesignInstance viewModels:ProfileViewModel}">
    <UserControl.Resources>
        <converters2:ToUpperConverter x:Key="ToUpperConverter" />
        <converters1:InvertBooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InvertBooleanConverter x:Key="InvertBooleanConverter" />

        <DataTemplate x:Key="ExchangeHeaderTemplate">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Rectangle Width="18"
                           Fill="{DynamicResource AccentSelectedColorBrush}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                     Visual="{StaticResource appbar_email}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
                <TextBlock Margin="5,0,0,0"
                           Text="{Binding Header,RelativeSource={RelativeSource AncestorType=GroupBox},Mode=OneWay,Converter={StaticResource ToUpperConverter}}"
                           Foreground="{DynamicResource AccentSelectedColorBrush}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="OutlookHeaderTemplate">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Rectangle Width="18"
                           Fill="{DynamicResource AccentSelectedColorBrush}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                     Visual="{StaticResource appbar_office_outlook}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
                <TextBlock Margin="5,0,0,0"
                           Text="{Binding Header,RelativeSource={RelativeSource AncestorType=GroupBox},Mode=OneWay,Converter={StaticResource ToUpperConverter}}"
                           Foreground="{DynamicResource AccentSelectedColorBrush}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="GoogleHeaderTemplate">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Rectangle Width="18"
                           Fill="{DynamicResource AccentSelectedColorBrush}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                     Visual="{StaticResource appbar_google}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
                <TextBlock Margin="5,0,0,0"
                           Text="{Binding Header,RelativeSource={RelativeSource AncestorType=GroupBox},Mode=OneWay,Converter={StaticResource ToUpperConverter}}"
                           Foreground="{DynamicResource AccentSelectedColorBrush}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Outlook">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GroupBox Header="Outlook Settings">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <RadioButton Content="Outlook Application"
                                         IsChecked="{Binding IsExchangeWebServices,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,
                                                    Converter={StaticResource ResourceKey=InvertBooleanConverter}}"
                                         Margin="2"
                                         GroupName="OutlookApplicationGroup" />
                            <RadioButton Content="Exchange Web Services"
                                         IsChecked="{Binding IsExchangeWebServices}"
                                         Margin="2"
                                         GroupName="OutlookApplicationGroup"
                                         Grid.Column="1"
                                         Command="{Binding GetOutlookProfileListCommand}"
                                         IsEnabled="False"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="1" 
                              Header="Exchange Server Settings"
                              HeaderTemplate="{StaticResource ExchangeHeaderTemplate}"
                              Visibility="{Binding IsExchangeWebServices,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3.5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Domain"
                                       VerticalAlignment="Center"
                                       Margin="2" />
                            <TextBox Grid.Column="1"
                                     Margin="2"
                                     Text="{Binding Username,Mode=TwoWay}" />
                            <TextBlock Grid.Row="1"
                                       Text="Username"
                                       VerticalAlignment="Center"
                                       Margin="2" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Margin="2"
                                     Text="{Binding Username,Mode=TwoWay}" />
                            <TextBlock Text="Password"
                                       Grid.Row="2"
                                       VerticalAlignment="Center"
                                       Margin="2" />
                            <PasswordBox Grid.Row="2"
                                         Grid.Column="1"
                                         Margin="2"
                                         PasswordChar="*"
                                         controls:PasswordBoxHelper.CapsLockWarningToolTip="CAPSLOCK IS ON" />
                            <TextBlock Grid.Row="3"
                                       Margin="2"
                                       Text="Exchange Server Url"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Row="3"
                                     Grid.Column="1"
                                     Margin="2"
                                     Text="{Binding ExchangeServerUrl,Mode=TwoWay}" />
                            <Button Margin="5"
                                    Grid.Row="4"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Right"
                                    Height="30"
                                    Content="Detect Settings"
                                    Command="{Binding AutoDetectExchangeServer}" />
                            <TextBlock Grid.Row="5"
                                       Margin="2"
                                       Text="Select Calendar"
                                       VerticalAlignment="Center" />
                            <ComboBox Margin="2"
                                      Grid.Column="1"
                                      Grid.Row="5"
                                      Height="30" />
                            <Button Grid.Row="6"
                                    Width="150"
                                    Margin="2"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Content="Reset Exchange Calendar" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Profile &amp; MailBox Settings"
                              Grid.Row="1"
                              HeaderTemplate="{StaticResource OutlookHeaderTemplate}"
                              Visibility="{Binding IsExchangeWebServices,Converter={StaticResource InvertBooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3.5*" />
                            </Grid.ColumnDefinitions>
                            <RadioButton Content="Default Profile"
                                         IsChecked="{Binding IsDefaultProfile,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                         Margin="2"
                                         GroupName="OutlookProfileGroup"
                                         Grid.ColumnSpan="2"
                                         Grid.Row="0" />
                            <RadioButton Content="Choose Profile"
                                         IsChecked="{Binding IsDefaultProfile,Converter={StaticResource ResourceKey=InvertBooleanConverter}}"
                                         Margin="2"
                                         Name="outlookProfileRadioButton"
                                         GroupName="OutlookProfileGroup"
                                         Grid.Row="1"
                                         Grid.ColumnSpan="2"
                                         Grid.Column="0"
                                         Command="{Binding GetOutlookProfileListCommand}" />
                            <TextBlock Text="Select Profile"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       IsEnabled="False"
                                       VerticalAlignment="Center"
                                       Margin="2" />
                            <ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      SelectedItem="{Binding Path=SelectedOutlookProfileName}"
                                      Margin="2"
                                      ItemsSource="{Binding Path=OutlookProfileList,UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding Path=IsChecked,ElementName=outlookProfileRadioButton}" />
                            <RadioButton Content="Default MailBox and Calendar"
                                         IsChecked="{Binding IsDefaultMailBox,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                         Margin="2"
                                         GroupName="OutlookMailBoxGroup"
                                         Grid.ColumnSpan="2"
                                         Grid.Column="0"
                                         Grid.Row="3" />
                            <RadioButton Grid.Row="4"
                                         Content="Choose Another MailBox"
                                         IsChecked="{Binding IsDefaultMailBox,Converter={StaticResource ResourceKey=InvertBooleanConverter}}"
                                         Margin="2"
                                         GroupName="OutlookMailBoxGroup"
                                         Name="MailBoxRadioButton"
                                         Grid.ColumnSpan="2"
                                         Grid.Column="0"
                                         Command="{Binding GetOutlookMailBoxesCommand}" />
                            <TextBlock Text="Select MailBox"
                                       Grid.Row="5"
                                       Grid.Column="0"
                                       IsEnabled="False"
                                       VerticalAlignment="Center"
                                       Margin="2" />
                            <ComboBox Grid.Row="5"
                                      Grid.Column="1"
                                      SelectedItem="{Binding Path=SelectedOutlookMailBox}"
                                      DisplayMemberPath="Name"
                                      Margin="2"
                                      ItemsSource="{Binding Path=OutlookMailBoxes}"
                                      IsEnabled="{Binding Path=IsChecked,ElementName=MailBoxRadioButton}" />
                            <TextBlock Text="Select Calendar"
                                       Grid.Row="6"
                                       Grid.Column="0"
                                       IsEnabled="False"
                                       VerticalAlignment="Center"
                                       Margin="2" />
                            <ComboBox Grid.Row="6"
                                      Grid.Column="1"
                                      Margin="2"
                                      DisplayMemberPath="Name"
                                      SelectedItem="{Binding Path=SelectedOutlookCalendar}"
                                      IsEnabled="{Binding Path=IsChecked,ElementName=MailBoxRadioButton}"
                                      ItemsSource="{Binding Path=SelectedOutlookMailBox.Calendars}" />
                            <Button Margin="2"
                                    Grid.Row="7"
                                    Grid.Column="1"
                                    Width="150"
                                    VerticalAlignment="Center"
                                    Content="Reset Outlook Calendar"
                                    Command="{Binding ResetOutlookCalendarCommand}"
                                    HorizontalAlignment="Right" />
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Google">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GroupBox Header="Select Google Calendar"
                              HeaderTemplate="{StaticResource GoogleHeaderTemplate}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3.5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Select Calendar"
                                       VerticalAlignment="Center" />
                            <ComboBox Margin="2"
                                      Grid.Column="1"
                                      DisplayMemberPath="Name"
                                      ItemsSource="{Binding GoogleCalenders,UpdateSourceTrigger=PropertyChanged}"
                                      SelectedItem="{Binding SelectedCalendar,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                            
                            <Button Margin="2"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="150"
                                    Command="{Binding GetGoogleCalendarCommand}"
                                    VerticalAlignment="Center"
                                    Content="Get Google Calendars"
                                        HorizontalAlignment="Right" />
                            
                            <Button Margin="2"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="150"
                                    VerticalAlignment="Center"
                                    Content="Reset Google Calendar"
                                    Command="{Binding ResetGoogleCalendarCommand}"
                                    HorizontalAlignment="Right" />
                            
                            <Button Margin="2"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Width="150"
                                    Command="{Binding DisconnectGoogleCommand}"
                                    VerticalAlignment="Center"
                                    Content="Disconnect Google"
                                    HorizontalAlignment="Right" />
                        </Grid>

                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Sync">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Hidden">
                    <views:SyncSettingsView DataContext="{Binding}" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Options">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Hidden">
                    <views:OptionsSettingsView DataContext="{Binding}" />
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>