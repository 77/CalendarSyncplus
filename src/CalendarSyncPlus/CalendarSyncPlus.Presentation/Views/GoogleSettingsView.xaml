<UserControl x:Class="CalendarSyncPlus.Presentation.Views.GoogleSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:CalendarSyncPlus.Application.ViewModels;assembly=CalendarSyncPlus.Application"
             xmlns:converters="http://metro.mahapps.com/winfx/xaml/shared"
             xmlns:views="clr-namespace:CalendarSyncPlus.Presentation.Views"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="500"
             d:DataContext="{d:DesignInstance viewModels:ProfileViewModel}">
    <UserControl.Resources>
        <converters:ToUpperConverter x:Key="ToUpperConverter"/>
        <DataTemplate x:Key="GoogleHeaderTemplate">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Rectangle Width="18"
                           Fill="{DynamicResource AccentSelectedColorBrush}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                     Visual="{StaticResource appbar_google}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
                <TextBlock Margin="5,0,0,0"
                           Text="{Binding Header,RelativeSource={RelativeSource AncestorType=GroupBox},Mode=OneWay,Converter={StaticResource ToUpperConverter}}"
                           Foreground="{DynamicResource AccentSelectedColorBrush}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Header="Select Google Calendar"
                  HeaderTemplate="{StaticResource GoogleHeaderTemplate}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Select Account"
                           VerticalAlignment="Center"
                           Grid.Row="0" />
                <ComboBox Margin="2"
                          Grid.Row="0"
                          Grid.Column="1"
                          DisplayMemberPath="Name"
                          ItemsSource="{Binding Path=DataContext.GoogleAccounts,UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type views:ProfileSettingsView}}}"
                          SelectedItem="{Binding SelectedGoogleAccount,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Grid.Row="1"
                            Grid.Column="1">
                    <Button Margin="2"
                            Width="150"
                            Command="{Binding DisconnectGoogleCommand}"
                            VerticalAlignment="Center"
                            Content="Disconnect Account"
                            HorizontalAlignment="Right" />
                    <Button Margin="2"
                            Width="150"
                            Command="{Binding Path=DataContext.AddNewGoogleAccount,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type views:ProfileSettingsView}}}"
                            VerticalAlignment="Center"
                            Content="Add Google Account" />
                </StackPanel>
                

                <TextBlock Text="Select Calendar"
                           VerticalAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="0" />
                <ComboBox Margin="2"
                          Grid.Row="2"
                          Grid.Column="1"
                          DisplayMemberPath="Name"
                          ItemsSource="{Binding GoogleCalendars,UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedCalendar,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Grid.Row="3"
                            Grid.Column="1">
                    <Button Margin="2"
                            Width="150"
                            VerticalAlignment="Center"
                            Content="Reset Google Calendar"
                            Command="{Binding ResetGoogleCalendarCommand}"
                            HorizontalAlignment="Right" />
                    <Button Margin="2"
                        Width="150"
                        Command="{Binding GetGoogleCalendarCommand}"
                        VerticalAlignment="Center"
                        Content="Get Google Calendars"
                        HorizontalAlignment="Right" />

                
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
