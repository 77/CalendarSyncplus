<UserControl x:Class="OutlookGoogleSyncRefresh.Presentation.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:OutlookGoogleSyncRefresh.Presentation.Behaviors"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:OutlookGoogleSyncRefresh.Application.ViewModels;assembly=OutlookGoogleSyncRefresh.Application"
             d:DataContext="{d:DesignInstance viewModels:ShellViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="10,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!--  Sync Status  -->
        <controls:MetroProgressBar Grid.Row="0"
                                   Grid.ColumnSpan="2"
                                   VerticalAlignment="Top"
                                   IsIndeterminate="True"
                                   Visibility="{Binding IsSyncInProgress,
                                                            Converter={StaticResource BooleanToVisibilityConverter},
                                                            UpdateSourceTrigger=PropertyChanged}" />
        <!--  Last Sync Status  -->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Margin="5"
                   FontWeight="600"
                   Text="Last Successful Sync : " />
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Margin="5"
                   Text="{Binding LastSyncTime,
                                  UpdateSourceTrigger=PropertyChanged,
                                  StringFormat='{}{0:F}'}" />
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Margin="5"
                   FontWeight="600"
                   Text="Next Scheduled Sync : "
                   Visibility="{Binding IsPeriodicSyncStarted,
                                        Converter={StaticResource BooleanToVisibilityConverter},
                                        UpdateSourceTrigger=PropertyChanged}" />
        <!--  Next Sync  -->
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   Margin="5"
                   Text="{Binding NextSyncTime,
                                  UpdateSourceTrigger=PropertyChanged,
                                  StringFormat='{}{0:F}'}"
                   Visibility="{Binding IsPeriodicSyncStarted,
                                        Converter={StaticResource BooleanToVisibilityConverter},
                                        UpdateSourceTrigger=PropertyChanged}" />

        <GroupBox Grid.Row="3"
                  Grid.ColumnSpan="2"
                  Header="Log">
            <TextBox IsReadOnly="True"
                     IsReadOnlyCaretVisible="False"
                     Text="{Binding SyncLog,
                                    Mode=OneWay}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Visible">
                <i:Interaction.Behaviors>
                    <behaviors:TextBoxScrollBehavior />
                </i:Interaction.Behaviors>
            </TextBox>
        </GroupBox>

        <StackPanel Grid.Row="4"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
            <Button Margin="5" Command="{Binding StartSyncCommand}">
                <Button.Style>
                    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                        <Setter Property="Content" Value="Start Periodic Sync" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPeriodicSyncStarted, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                <Setter Property="Content" Value="Stop Periodic Sync" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Margin="5"
                    Command="{Binding SyncNowCommand}"
                    Content="Sync Now" />
        </StackPanel>

    </Grid>
</UserControl>
